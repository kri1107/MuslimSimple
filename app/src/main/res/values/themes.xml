<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuslimSimple" parent="Theme.Material3.Light.NoActionBar">
        // Primary brand color.
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/external</item>
        <item name="colorOnPrimary">@color/black</item>
        // Secondary brand color.
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        // Status bar color.
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        // Customize your theme here.
    </style>

    <style name="Theme.MuslimSimple.Fullscreen" parent="Theme.MuslimSimple">
        <item name="android:actionBarStyle">@style/Widget.Theme.MuslimSimple.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MuslimSimple.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

